{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@functions/*": ["./functions/*"],
      "@global*": ["./global/*"],
      "@modules/*": ["./modules/*"],
      "@pages/*": ["./pages/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "cypress.config.ts",
    "eslint.config.ts",
    "webpack.config.ts",
    "**/*.test.ts",
    "src",
    "wasmModules"
  ],
  "exclude": [
    "cypress",
    "**/*.cy.ts",
    "node_modules"
  ]
}
